{
  "rules": {
    ".read": "auth != null",
    "ctrees": {
    	".write": "auth != null",
    	"$ctree": {
        "description": {
          "$forType": {
          	"$typeId": {
              ".indexOn": "rating"
          	}
          }
        },
        "elements": {
          ".indexOn": ["childCount", "createdDate", "feedbackCount", "interactionCount", "lastInteractionDate", "rating"],
        },
        "feedback": {
          "$forType": {
            "$typeId": {
              ".indexOn": "rating"
            }
          }
        },
        "segmentVariations": {
          "$forType": {
            "$typeId": {
              ".indexOn": "rating"
            }
          }
        }
      }
    }
  }
}
